datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Customer {
    id    Int    @id @default(autoincrement())
    email String @unique
    cpf   String @unique
    name  String

    orders Order[]
}

model Category {
    id   Int    @id @default(autoincrement())
    name String @unique

    products Product[]
}

model Product {
    id          Int      @id @default(autoincrement())
    name        String   @unique
    ingredients String?
    category    Category @relation(fields: [categoryId], references: [id])
    categoryId  Int
    price       Float
}

model Order {
    id           Int      @id @default(autoincrement())
    content      String
    customer     Customer @relation(fields: [customerCpf], references: [cpf])
    customerName String   @map("customerName")
    customerCpf  String
}
